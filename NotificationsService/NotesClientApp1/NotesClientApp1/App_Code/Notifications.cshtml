@helper Login(string name, string chatId)
{

    if (@NotificationsConfig.NotificationsConfigurationClass.GetConfig() != null && NotificationsConfig.NotificationsConfigurationClass.GetConfig().Service.Url != "")
    {
<script src="~/Scripts/Notifications/notifications.js"></script>
        <link rel="stylesheet" type="text/css" href="~/Content/chat/chat.css" />
    <div id="notifications">&nbsp;</div>
        <script src='@NotificationsConfig.NotificationsConfigurationClass.GetConfig().Service.Url/signalr/hubs'> </script>
        <script>
            addToChat('@name', '@notificationsId', '@NotificationsConfig.NotificationsConfigurationClass.GetConfig().Service.Url')
        </script>
    
}

} 